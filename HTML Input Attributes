<!-- Los atributos mínimo y máximo -->
<form>
<label for="datemax">Introduzca una fecha anterior al 1 de enero de 1980:</label>
<input type="date" id="datemax" name="datemax" max="1979-12-31"><br><br>

<label for="datemin">Introduzca una fecha posterior al 01/01/2000:</label>
<input type="date" id="datemin" name="datemin" min="2000-01-02"><br><br>

<label for="quantity">Cantidad (entre 1 y 5):</label>
<input type="number" id="quantity" name="quantity" min="1" max="5">
</form>

<!-- El atributo múltiple -->
<form>
